<h1>Listing disasters</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Country</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <%= @disasters %>

  <tbody>
    <% @disasters.each do |disaster| %>
      <tr>
        <td><%= disaster[:id] %></td>
        <td><%= disaster[:fields][:title] %></td>
        <td><%= link_to 'Show', disaster[:href] %></td>
        <td><%= link_to 'Edit', edit_disaster_path(disaster) %></td>
        <td><%= link_to 'Destroy', disaster, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Disaster', new_disaster_path %>
